             <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp" >

                    <ImageView
                        android:layout_width="82dp"
                        android:layout_height="124dp"
                        android:background="@drawable/bound_icon_book"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/icon_book"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_book"
                        android:scaleType="fitXY" />
                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_su_username"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5dp"
                        android:text="@string/book_name"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_bookName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_su_username"
                        android:gravity="left|center_vertical"
                        android:maxLength="50"
                        android:paddingLeft="120dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_su_username"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5dp"
                        android:text="@string/author"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_su_username"
                        android:gravity="left|center_vertical"
                        android:maxLength="50"
                        android:paddingLeft="120dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_su_username"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5dp"
                        android:text="@string/edition"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/edt_edition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_su_username"
                        android:gravity="left|center_vertical"
                        android:maxLength="50"
                        android:paddingLeft="120dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textSize="17sp" />
                </RelativeLayout>

                <!-- <RelativeLayout -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="40dp" -->
                <!-- android:layout_marginTop="10dp" -->
                <!-- android:background="@drawable/edt_su_username" -->
